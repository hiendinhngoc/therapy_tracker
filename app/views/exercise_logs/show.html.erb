<% content_for(:title, format_time(@exercise_log)) %>

<%= render partial: 'exercise_logs/exercise_log_header', locals: { log: @exercise_log } %>

<h2>
  <span class='pull-right'>
    <%= link_to 'Edit', @pt_session ? edit_pt_session_exercise_log_path(@pt_session, @exercise_log) : edit_exercise_log_path(@exercise_log), class: button_class %>
    <%= link_to 'Back', @pt_session ? pt_session_path(@pt_session) : logs_path, class: button_class %>
  </span>
  <%= @exercise_log.exercise_name.titleize %>
</h2>

<p>
  <%= format_exercise_stats(@exercise_log) %>
</p>

<p>
  <%= format_time(@exercise_log) %>
</p>

<p>
  <strong>Describe 1 Rep:</strong><br>
  <%= @exercise_log.exercise.description %>
</p>

<p>
  <strong>Progress notes:</strong><br>
  For: <%= @exercise_log.body_part_name %> | Burn at Set <%= @exercise_log.burn_set %>, Rep <%= @exercise_log.burn_rep %><%= format_resistance(@exercise_log) %><br>
  <%= @exercise_log.progress_note %>
</p>


<!-- Button trigger modal -->
<button type='button' class='btn btn-warning btn-wide' data-toggle='modal' data-target='#exampleModal'>
  <i class='far fa-stopwatch'></i> Launch Rep Counter
</button>

<%= render partial: 'exercise_logs/rep_counter_modal' %>
<%= new_exercise_log_button %>

<script>
  counter(<%= @exercise_log.sets %>, <%= @exercise_log.reps %>, <%= @exercise_log.rep_length %>)
</script>
